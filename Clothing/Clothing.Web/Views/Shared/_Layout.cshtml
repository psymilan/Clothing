<!DOCTYPE html>
<html class="">
<head>
    <title>@ViewBag.Title - SHIRIN VAHIDI Clothing</title>
    <link href="~/Content/Template/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/Template/css/style.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.3.js"></script>
    <link href="~/Content/Template/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:100,200,300,400,500,600,700,800,900' rel='stylesheet' type='text/css'>
    <script src="~/Scripts/jquery.magnific-popup.js" type="text/javascript"></script>
    <link href="~/Content/Template/css/magnific-popup.css" rel="stylesheet" type="text/css">
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.popup-with-zoom-anim').magnificPopup({
                type: 'inline',
                fixedContentPos: false,
                fixedBgPos: true,
                overflowY: 'auto',
                closeBtnInside: true,
                preloader: false,
                midClick: true,
                removalDelay: 300,
                mainClass: 'my-mfp-zoom-in'
            });
        });
    </script>
</head>
<body class="gradient">
    <div class="" style="background: #291f19;">
    <header class="container">
        <div id="menu" class="navbar navbar-default">
            <div class="navbar-header">
                <button class="btn btn-success navbar-toggle"
                        data-toggle="collapse"
                        data-target=".navbar-collapse">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                </button>
                <div class="logo hidden-sm hidden-xs">
                    <a href="/Home/Index"><img src="~/Content/Template/images/logo.png" alt=""></a>
                </div>
                <div class="logo hidden-lg hidden-md">
                    <a href="/Home/Index"><img style=" width: 150px; height: 50px;" src="~/Content/Template/images/banner_logo.png" alt=""></a>
                </div>
            </div>
            @*<div class="cssmenu">*@
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="nav"><a href="/Home/Index">Home</a></li>
                    <li class="nav"><a href="/Home/About">About Us</a></li>
                    <li class="nav"><a href="/Catalogue/Index">Online Store</a></li>
                    <li class="nav"><a href="/Home/Contact">Contact Us</a></li>
                    @if (User.Identity.Name == "2")
                    {
                        <li class="nav"><a href="/Admin/AdminHome">Admin</a></li>
                    }
                </ul>
            </div>
            @*</div>*@
        </div>
        <div class="clearfix"> </div>
    </header>
    </div>
    @RenderBody()
    <script src="~/Scripts/jquery.wmuSlider.js"></script>
    <script>
        $('.example1').wmuSlider();
    </script>

    <div class="footer_bottom">

        <div class="container">
            <p class="copy">&copy; 2015 Shirin-Vahidi</p>
            <ul class="social">
                <li><a href="https://www.facebook.com/pages/SHIRINVAHIDI/948691965161458?ref=hl"><i class="fb"> </i> </a></li>
                <li><a href="https://twitter.com/shirinvahidi"><i class="tw"> </i> </a></li>
                <li><a href="https://instagram.com/shirinvahidi/"><i class="inst"> </i> </a></li>
                <li><a href="https://www.pinterest.com/shirinvahidi/"><i class="pin"> </i> </a></li>
            </ul>
        </div>
    </div>
    <script src="~/Scripts/jquery.scrollTo.js"></script>
    <script src="~/Scripts/jquery.nav.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>		