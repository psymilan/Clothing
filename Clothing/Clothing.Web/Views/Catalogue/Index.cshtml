@model IEnumerable<Clothing.Web.DTOs.ProductDto>
@{
    ViewBag.Title = "Index";
}

<div class="portfolio section" id="section-3">
    <div class="container">
        @foreach (var item in Model)
        {
            if (item.ImagePaths.Any())
            {
                <div class="col-md-4">

                        <img src="@(item.ImagePaths.First())" class="img-responsive" alt="" />
                    <a class="info" href="/Catalogue/Detail/@item.Id"><span class="info1" style="position: absolute;">See more</span></a>

                </div>
            }
        }
    </div>

    <div class="clearfix"></div>
</div>
